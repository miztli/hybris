<widget-definition id="de.hybris.platform.adaptivesearch.widgets.categorySelector" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

	<name>Category Selector</name>
	<description>Allows to change the current category for adaptive search</description>
	<defaultTitle>Category Selector</defaultTitle>

	<author>hybris</author>
	<version>0.1</version>
	<keywords>
		<keyword>Adaptive Search</keyword>
	</keywords>

	<controller class="de.hybris.platform.adaptivesearchbackoffice.widgets.categoryselector.CategorySelectorController" />

	<sockets>
		<input id="navigationContext" type="de.hybris.platform.adaptivesearchbackoffice.data.NavigationContextData" />
		<input id="refresh" type="java.lang.Object" />
		<output id="selectedCategory" type="de.hybris.platform.adaptivesearchbackoffice.data.CategoryData" />
	</sockets>
</widget-definition>
