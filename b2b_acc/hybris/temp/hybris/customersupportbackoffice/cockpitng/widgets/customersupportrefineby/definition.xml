<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="de.hybris.platform.customersupportbackoffice.widgets.customersupportrefineby">
    <name>customersupport.refineby</name>
    <description>Customer Support Refine By Widget displays the list of available filters for a given type</description>
    <defaultTitle>Customer Support Refine By</defaultTitle>
    <author>hybris</author>
    <version>0.1</version>

    <sockets>
        <input id="nodeSelected" type="com.hybris.backoffice.navigation.NavigationNode"/>
        <input id="inputContext" type="com.hybris.backoffice.widgets.advancedsearch.impl.AdvancedSearchInitContext"/>
        <output id="outputContext" type="com.hybris.backoffice.widgets.advancedsearch.impl.AdvancedSearchInitContext"/>
    </sockets>

    <controller class="de.hybris.platform.omsbackoffice.widgets.customersupportrefineby.CustomerSupportRefineByController"/>
    <keywords>
        <keyword>OMS</keyword>
    </keywords>
    <settings>
        <setting key="customersupportRefineByConfigCtx" default-value="customersupportbackoffice-refine-by" type="java.lang.String"/>
    </settings>
</widget-definition>
