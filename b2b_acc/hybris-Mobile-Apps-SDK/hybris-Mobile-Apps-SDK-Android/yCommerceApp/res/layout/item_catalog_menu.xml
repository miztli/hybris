<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/catalog_menu_item"
    android:orientation="vertical"
    android:padding="@dimen/catalog_menu_item_margin">

    <TextView
        android:id="@+id/catalog_menu_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/catalog_menu_item"
        android:textSize="@dimen/catalog_menu_item_text_size" />

    <ImageView
        android:id="@+id/catalog_menu_item_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right"
        android:contentDescription="@null" />

</RelativeLayout>