<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delivery_summary_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_detail_shadow"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium">

    <!-- order confirmation delivery address -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small">

            <TextView
                android:id="@+id/order_delivery_address_title"
                style="@style/h2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_confirmation_delivery_address_title" />

            <TextView
                android:id="@+id/order_delivery_address_text"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="" />
        </LinearLayout>

        <!-- order confirmation delivery method -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small">

            <TextView
                android:id="@+id/order_delivery_method_title"
                style="@style/h2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_confirmation_delivery_method_title" />

            <TextView
                android:id="@+id/order_delivery_method_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>