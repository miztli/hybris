<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_detail_image_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_detail_viewpager_height"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v4.view.ViewPager
        android:id="@+id/product_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:contentDescription="@string/product_img_description"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/product_detail_view_pager_indicator_bar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/product_detail_layout_margin_top"
        android:layout_weight="0.1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible" />

</LinearLayout>